@page
@model InterGalacticEcomm.Pages.Home.CheckoutModel
@{
}


<h1>Checkout page</h1>

<div class="row">
    @foreach (var item in Model.Cart.CartProducts)
    {
<div class="col-md-6">
    <div class="col-sm-6">
        <div class="thumbnail">
            <div class="caption text-center">
                <div class="position-relative">
                    <img src="@item.Product.URL" style="width:72px;height:72px;" />
                </div>
                <h4 id="thumbnail-label"><a asp-page="/Home/Product" asp-route-Id="@item.ProductId">@item.Product.Name</a></h4>
                <div class="thumbnail-description smaller">@item.Product.Description</div>
            </div>
            <div class="caption card-footer text-center">
                <ul class="list-inline">
                    <li>
                        @item.Product.Price
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-2">&nbsp;</div>
</div>}
</div>

<form method="post">
    <div>
        <label asp-for="@Model.CreditCard.CreditCardNum">CreditCard Number: </label>
        <input  readonly type="text" value="4111111111111111" />
    </div>
    <div>
        <label asp-for="@Model.CreditCard.Expiration">Expiration Date: </label>
        <input readonly type="text" value="0718" />
    </div>
    <div>
        <label asp-for="@Model.CreditCard.Address">Address: </label>
        <input type="text" />
    </div>
    <div>
        <label asp-for="@Model.CreditCard.State">State: </label>
        <input type="text" />
    </div>
    <div>
        <label asp-for="@Model.TotalPrice">State: </label>
        <input type="hidden" asp-for="@Model.TotalPrice"/>
    </div>
    <div>
        <p style="font-weight:bold;">Your total is: @Model.TotalPrice</p>
        <input type="submit" value="Purchase Order" />
    </div>
</form>